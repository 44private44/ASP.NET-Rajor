@{
}
@model CMSAdminViewModel

<div class="NewUserAddAdmindiv deleteconfirm addcmsdata" id="deletePopup">
    <div class="MainUserDeletePartialdiv">
        <div class="admin_user_title" style="padding:0;">
            <h5>CMS ADD</h5>
            <hr>
        </div>
        @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "login_form", id = "cmsadminaddform", onsubmit = "CmsAddSubmit(); return false;" }))
        {
            <!-- Basic Information -->
            <div class="row mb-4">
                <div class="form-group col-12">
                    @Html.LabelFor(model => model.Title, new { @class = "mb-1", id = "cmsaddtitlelabel" })
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control", id = "cmsaddtitle", placeholder = "Enter title here" })
                </div>
            </div>
            <div class="row mb-4">
                <div class="form-group col-12">
                    @Html.LabelFor(model => model.Slug, new { @class = "mb-1", id = "cmssluglelabel" })
                    @Html.TextBoxFor(model => model.Slug, new { @class = "form-control", id = "cmsaddslug", placeholder = "Enter slug" })
                </div>
            </div>
            <div class="row mb-4">
                <div class="form-group col-12">
                    <!-- Active or not -->
                @Html.LabelFor(model => model.Status, new { @class = "mb-1" })
                    <div class="d-flex user_status">
                        <div class="form-check">
                            @Html.RadioButtonFor(model => model.Status, "1", new { @class = "form-check-input", id = "active" })
                            <label class="form-check-label" for="active">
                                Active
                            </label>
                        </div>
                        <div class="form-check">
                            @Html.RadioButtonFor(model => model.Status, "0", new { @class = "form-check-input", id = "inactive" })
                            <label class="form-check-label" for="inactive">
                                Inactive
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex">
                <!-- Cancel -->
            <div class="apply_button_card main_div_save">
                    <button class="card_apply_button newusercancleform" onclick="addCmsCanclebtn()">
                        Cancel
                    </button>
                </div>
                <!-- Save -->
            <div class="apply_button_card main_div_save">
                    <button type="submit" class="card_apply_button">
                        Submit
                    </button>
                </div>
            </div>
        }

    </div>

</div>
