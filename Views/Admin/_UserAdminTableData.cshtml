@{
}

@model IEnumerable<UserAdminViewModel>

@*  <td>jewb</td>
  <td>jewb</td>*@

@foreach (var user in Model)
{
    <tr>
        <td>@user.FirstName</td>
        <td>@user.LastName</td>
        <td>@user.Email</td>
        <td>@user.EmpID</td>
        <td>@user.Dept</td>
        <td class="status_@(user.Status == 1 ? "active" : "inactive")">
            @(user.Status == 1 ? "Active" : "Inactive")
        </td>
        <td>
            <i class="fa-regular fa-pen-to-square UserEditAdminButton"  data-userid="@user.UserID"></i>
            <i class="fa-solid fa-trash-can deleteihover UserDeleteAdminButton" data-userid="@user.UserID"></i>
        </td>
    </tr>
}
