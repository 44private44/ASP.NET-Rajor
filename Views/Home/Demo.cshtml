$(document).ready(function () {
    // Attach click event handler to menu buttons
    $('.main_admin_menus_divs button').click(function (e) {
        e.preventDefault();
        var url = $(this).parent().attr('href'); // Get the URL from the menu button's parent anchor element

        // Make an AJAX request to the specified URL
        $.ajax({
            url: url,
            type: 'GET',
            success: function (data) {
                $('#partialViewContainer').html(data); // Load the partial view into the container
            },
            error: function () {
                // Handle error if necessary
            }
        });
    });
});
